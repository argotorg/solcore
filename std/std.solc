function gt(x:a, y:a) -> bool {
  return not(Ord.gt(x,y));
}

forall a. a:Ord =>
function le(x:a, y:a) -> bool {
  return not(Ord.gt(x,y));
}

forall a. a:Ord =>
function ge(x:a, y:a) -> bool {
  return le(y,x);
}

forall a. a:Ord =>
function lt(x:a, y:a) -> bool {
  return gt(y,x);
