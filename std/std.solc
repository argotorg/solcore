forall a.
class a:Eq {
  function eq(x:a, y:a) -> bool;
}

instance word:Eq {
  function eq(x:word, y:word) -> bool {
    let res : word;
    assembly {
       res := eq(x, y)
    }
    return tobool(res);
  }
}

forall a. a:Eq =>
function ne(x:a, y:a) {
  return not(Eq.eq(x,y));
