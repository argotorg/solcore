import std;
import dispatch;

function caller() -> address {
  let res: word;
  assembly {
     res := caller()
  }
  return address(res);
}

function myrevert(msg: word) -> () {
       assembly { mstore(0, msg) revert(0, 32) }
}

function require(cond: bool, msg: word ) {
      if( !cond ) { myrevert(msg); }
}

contract MiniERC20 {
  reserved : word; // forge idiosyncrasies
  name : string;
  symbol : string;
  owner : address;
  decimals : uint256;
  totalSupply : uint256;
  balances : mapping(address,uint256);
  allowance : mapping(address, mapping(address, uint256));


  constructor(name_ : memory(string), symbol_ : memory(string), totalSupply_:uint256) {
    name = name_;
    symbol = symbol_;
    owner = caller();
    decimals = uint256(18);
    owner = caller();
    mint(totalSupply_);
  }


  function getName() -> memory(string) {
    return name;
  }

  function mint(amount:uint256) -> () {
    balances[owner] = Num.add(balances[owner], amount);
    totalSupply = Num.add(totalSupply, amount);
  }

