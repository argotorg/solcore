contract Option {
  data Option(a) = None | Some(a);

  forall a . function just(x : a) -> Option(a) { return Some(x); }

  forall a . function maybe(n : a, o : Option(a)) -> a {
    match o {
      | None => return n;
      | Some(x) => return x;
    }
  }


  forall a . function join(mmx : Option(Option(a))) -> Option(a) {
    match mmx {
      | None => return None;
      | Some(None) => return None;
      | Some(Some(x)) => return Some(x);
    }
  }

  forall a . function join2(mmx : Option(Option(a))) -> Option(a) {
    match mmx {
      | Some(m) => match m {
          | None => return None;
          | Some(x) => return Some(x);
      }
      | _ => return None;
    }
  }

  function main() -> word {
    return maybe(0, join(Some(Some(42))));
  }
}
