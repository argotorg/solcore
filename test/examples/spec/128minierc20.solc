import IndexLib;

function caller() -> address {
  let res: word;
  assembly {
     res := caller()
  }
  return address(res);
}

function require1fail() {
  let res: word;
  assembly {
    mstore(0x0, 0x72657175697265313a204641494c) // "require1: FAIL"
    revert(0,32)
  }
  return (); // for the typechecker
}

function require1(cond: Bool) {
    match cond {
    | False => return require1fail();
    | True => return ();
  }
}

function nop() -> () { return ();}

