class  ref : Ref(deref) {
  function load (r:ref) -> deref;
  function store(r:ref, v:deref) -> unit;
}

instance stack(word) : Ref(word) {
  function load(r) { return stkLoad(r); }
  function store(r, v) { return stkStore(r, v); }
}

