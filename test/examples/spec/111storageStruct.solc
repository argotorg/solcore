    function rep(x:storage(a)) -> word {
        match x {
            | storage(y) => return y;
        }
    }
    function abs(x:word) -> storage(a) {
        return storage(x);
    }
}
instance storageRef(a):Typedef(word) {
    function rep(x:storageRef(a)) -> word {
        match x {
            | storageRef(y) => return y;
        }
    }
    function abs(x:word) -> storageRef(a) {
        return storageRef(x);
    }
}

