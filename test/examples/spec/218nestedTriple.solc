
forall any.function undefined() -> any {
  assembly {
    revert(0,0)
  };
}

function add(x : word, y : word) {
  let res: word;
  assembly {
     res := add(x, y)
  };
  return res;
}

class  ref : Ref(deref) {
  function load (r:ref) -> deref;
  function store(r:ref, v:deref) -> unit;
}

instance stack(a) : Ref(a) {}

data PairFst = PairFst;
data PairSnd = PairSnd;


