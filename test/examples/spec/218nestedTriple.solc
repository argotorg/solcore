pragma no-bounded-variable-condition Ref;
data XRef(st, field, fieldType) = XRef(st, field);
instance (r:Ref( (a,b) ) )=>  XRef(r, PairFst, a) : Ref(a) {}
instance (r:Ref( (a,b) ) )=>  XRef(r, PairSnd, b) : Ref(b) {}


contract AssignPR {
  function fst(p) {
    match p {
      | (a,b) => return a;
    };
  }

  function snd(p) {
    match p {
      | (a,b) => return b;
    };
  }

  function sumPair(p) {
    match p {
      | (a,b) => return add(a,b);
    };
  }

  function sel3_2(t) {
    match t {
      | (a,b,c) => return b;
    };
  }


  function main() {
    let y : stack( (word, word, word) );
    let z : stack( (word, word, word) );

    Ref.store(y, (1,2,3));

    Ref.store( XRef(XRef(y, PairSnd), PairFst), 21 );
    Ref.store( z, Ref.load(y));

    return Ref.load(XRef(XRef(z, PairSnd), PairFst));
  }
}