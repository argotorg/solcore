contract Option {
  data Option(a) = None | Some(a);

  forall a . function just(x : a) -> Option(a){ return Some(x); }

  forall a . function maybe(n : a, o : Option(a)) -> a {
    match o {
      | None => return n;
      | Some(x) => return x;
    }
  }

  function main() -> word {
    return maybe(0, Some(42));
  }
}
