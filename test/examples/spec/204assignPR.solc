contract AssignPR {
  function fst(p) {
    match p {
      | (a,b) => return a;
    };
  }


  function main() {
    // let x : (word, word) = (42, 7) ;
    let x : stack((word, word));
    Ref.store(x, (42, 7));


    let y : stack((word, word));    
    // y = x;
    Ref.store(y, Ref.load(x));

    // return fst(y);
    return fst(Ref.load(y));
  }  
}